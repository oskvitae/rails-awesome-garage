<h1>Car Overview</h1>
<h2> <%= @car.brand %></h2>
<h2><%= @car.model %></h2>
<h2><%= @car.fuel %></h2>
<p><%= @car.year %></p>

<hr>
<% if @car.favourites.empty? %>
<%= simple_form_for [@car, @favourite] do |f| %>
  <%= f.submit "Add to your garage", class: "btn btn-primary" %>
<% end %>
<% else %>
<%= "In your garage âœ…" %>
<% end %>

<hr>
<%= simple_form_for [@car, @review] do |f| %>
  <%= f.input :comment %>
  <%= f.input :rating %>
  <%= f.submit "Submit review", class: "btn btn-primary" %>
<% end %>
<hr>
<%= link_to "View World Garage", cars_path %>
<hr>
<%= link_to "View My Garage", favourites_path %>
<hr>
<h2>Reviews</h2>
<% @car.reviews.each do |review| %>
<p><%= review.comment %></p>
<p>Rating: <%= review.rating %></p>
<p> ------------------------ </p>
<% end %>
